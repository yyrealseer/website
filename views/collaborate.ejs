            bodyText.value = initBody;
        }
    </script>


    <!-------- INPUT -------->
    <!-- Mobil header -->
    <script>
        $(function () {
            $('#mobile-header').load('./input/input_mobile-header.html');
        });
    </script>
    <!-- Footer -->
    <script>
        $(function () {
            $('.footer').load('./input/input_footer.html');
        });
    </script>
</body>

</html>